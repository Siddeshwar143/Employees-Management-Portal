<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCDHProject</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCDHProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
        }

        .hr-full-width {
            margin-left: calc(-50vw + 50%);
            margin-right: calc(-50vw + 50%);
            border: 0;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }

        .nav-link.disabled {
            pointer-events: none;
            opacity: 0.6;
        }
    </style>


</head>
<body class="bg-primary-subtle">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-">
        <div class="container">
            @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MVCDHProject</a> *@

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MVCDHProject</a>
                        <li class="nav-item">
                            <a class="nav-link text-white-50" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50" asp-controller="Customer" asp-action="DisplayCustomers">Employees</a>
                        </li>
                    }
                    else
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Login">MVCDHProject</a>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 disabled" href="#" title="Please login to access">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 disabled" href="#" title="Please login to access">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 disabled" href="#" title="Please login to access">Customers</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (signInManager.IsSignedIn(User))
                    {
                     <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white-50" href="#" id="userDropdown" 
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Profile
                        </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><h6 class="dropdown-header">User Details</h6></li>
                                <li><div class="dropdown-item">
                                    <small>User Name: @User.FindFirst(ClaimTypes.Name)?.Value</small>
                                </div></li>
                                <li>
                                    <div class="dropdown-item">
                                    <small>Email: @User.FindFirst(ClaimTypes.Email)?.Value</small>
                                    </div></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a></li>
                                                <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">Change Password</a></li>
                                                <li><hr class="dropdown-divider"></li>
                            </ul>
                     </li>
                    
                        <li class="nav-item">
                            <a class="nav-link text-white-50" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white-50" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    </header>
    <main class="container-fluid">
        @RenderBody()
    </main>
    <footer class="border-top text-muted">
        <div class="container">
            <hr class="hr-full-width my-0">
            <div class="row py-3">
                <!-- 1. Logo & Brand Statement -->
                <div class="col-sm">
                    <h5 class="fw-bold mb-1">MVCDHProject</h5>
                    <p class="small text-muted">Empowering data‑driven decisions with clarity and confidence.</p>
                </div>

                <!-- 2. Navigation Links -->
                <div class="col-sm">
                    <h6 class="fw-semibold">Navigate</h6>
                    <ul class="list-unstyled small mb-0">
                        <li><a asp-controller="Home" asp-action="Index">About Us</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                    </ul>
                </div>

                <!-- 3. Contact & Social -->
                <div class="col-sm">
                    <h6 class="fw-semibold">Get in touch</h6>
                    <address class="small mb-1">
                        1234 Mumbai Rd<br />
                        +91‑98765‑43210<br />
                        <a href="mailto:info@mvcdhproject.com">info@mvcdhproject.com</a>
                    </address>
                    <div class="d-flex">
                        <a href="#" class="me-2"><i class="bi bi-facebook" aria-label="Facebook"></i></a>
                        <a href="#" class="me-2"><i class="bi bi-twitter" aria-label="Twitter"></i></a>
                        <a href="#"><i class="bi bi-linkedin" aria-label="LinkedIn"></i></a>
                    </div>
                </div>
            </div>
            <hr class="hr-full-width my-0">
            <div class="text-center py-2 small">
                &copy; @DateTime.Now.Year - MVCDHProject
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Prevent default behavior for disabled links
        document.querySelectorAll('.nav-link.disabled').forEach(link => {
            link.addEventListener('click', e => {
                e.preventDefault();
                // Optional: Show login modal or toast notification
                // $('#loginModal').modal('show');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>