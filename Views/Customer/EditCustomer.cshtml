@model MVCDHProject.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container">
    <h1 class="text-center bg-warning text-white py-3 mb-4 rounded">Edit Customer</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Customer Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditCustomer" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Custid" />
                        <input type="hidden" asp-for="photo" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">Customer ID</label>
                                    <p class="form-control-plaintext">@Model.Custid</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">Status</label>
                                    <p class="form-control-plaintext">
                                        @if (Model.Status==true)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else if(Model.Status==false)
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="font-weight-bold"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Balance" class="font-weight-bold"></label>
                                    <input asp-for="Balance" class="form-control" />
                                    <span asp-validation-for="Balance" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="City" class="font-weight-bold"></label>
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">Customer Photo</label>
                                    <input type="file" name="photo" class="form-control" accept="image/*" />
                                    <small class="text-muted">Leave blank to keep current photo</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                            <a asp-action="DisplayCustomers" class="btn btn-secondary ms-2">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Photo Display Section -->
            <div class="card shadow mt-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Customer Photo</h5>
                </div>
                <div class="card-body text-center" id="photoContainer">
                    @if (!string.IsNullOrEmpty(Model.photo))
                    {
                        <img src="@Model.photo" alt="Customer Photo"
                             class="img-thumbnail mb-3" style="max-height: 300px;" />
                        <div>
                            <form id="deletePhotoForm" asp-action="DeletePhoto" method="post">
                                <input type="hidden" name="id" value="@Model.Custid" />
                                @Html.AntiForgeryToken()
                                <button type="button" class="btn btn-danger btn-sm"
                                        onclick="deletePhoto()">
                                    <i class="fas fa-trash-alt me-1"></i>Delete Photo
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="bg-light p-5 text-center">
                            <i class="fas fa-user-circle fa-5x text-secondary"></i>
                            <p class="mt-2">No photo available</p>
                        </div>
                    }
                </div>
            </div>
        </div>

@section Scripts {
            <script>
                function deletePhoto() {
                    if (confirm('Are you sure you want to delete this photo?')) {
                        // Submit the form via AJAX
                        $.ajax({
                            url: $('#deletePhotoForm').attr('action'),
                            type: 'POST',
                            data: $('#deletePhotoForm').serialize(),
                            success: function() {
                                // Update the photo container without reloading
                                $('#photoContainer').html(`
                                    <div class="bg-light p-5 text-center">
                                        <i class="fas fa-user-circle fa-5x text-secondary"></i>
                                        <p class="mt-2">No photo available</p>
                                    </div>
                                `);
                            },
                            error: function() {
                                alert('Error deleting photo');
                            }
                        });
                    }
                }
            </script>
}
